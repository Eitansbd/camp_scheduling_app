                <li><a href="/activities/new">Add Activity</a></li>
              </ul>
            </li>
            <li><a href="/divisions">Divisions</a></li>
            <li><a href="/time_slots">Time Slots</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <% if session[:message] %>
      <div class="flash success">
        <p><%= session.delete(:message) %></p>
      </div>
    <% end %>

    <%= yield %>
