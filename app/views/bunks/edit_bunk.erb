<form action="/bunks/<%= @bunk.id %>/edit" method="POST">
  <label for="name">Bunk name:</label>
  <input type="text" name="name" id="name" value="<%= @bunk.name %>">

  <label for="division">Bunk division</label>
  <select name="division" id="division">
    <% @divisions.each do |division| %>
      <% if division[:name] == @bunk.division %>
        <option value="<%= division[:name] %>" selected>
      <% else %>
        <option value="<%= division[:name] %>">
      <% end %>
          <%= division[:name] %>
        </option>
    <% end %>
  </select>

  <label for="gender">Gender</label>
  <select name="gender" id="gender" value="<%= @bunk.gender %>">
    <option value='M'>Male</option>
    <option value='F'>Female</option>
  </select>

  <br>

  <label for="save">Save Changes</label>
  <button id="save" type="submit"><i class='far'>&#xf0c7;</i></button>
</form>
