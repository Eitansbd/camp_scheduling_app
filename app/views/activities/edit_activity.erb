<div>
  <form action="/activities/<%= @activity.id %>/edit" method ="post">
    <div>
      <label for="name">Activity Name</label>
      <input type="text" id="name" name="name" value="<%= @activity.name %>" required>

      <label for="location">Location</label>
      <input type="text" id="location" name="location" value="<%= @activity.location %>" required>
    </div>

    <div>
      <label for="youngest_division_age">Youngest Division</label>
      <select name="youngest_division_age" id="youngest_division_age" required>
      <% divisions.each do |division| %>
        <option value="<%= division[:age] %>"><%= division[:name] %></option>
      <% end %>
      </select>

      <label for="oldest_division_age">Oldest Division</label>
      <select name="oldest_division_age" id="oldest_division_age" required>
      <% divisions.each do |division| %>
        <option value="<%= division[:age] %>"><%= division[:name] %></option>
      <% end %>
      </select>
    </div>

    <div>
      <label for="max_bunks">Maximum number of bunks</label>
      <input type="number" step="1" min="1" name="max_bunks" id="max_bunks" value="<%= @activity.max_bunks %>">

      <label for="double">Played for two periods?</label>
      <input id="double" type="checkbox" name="double" value="t" <%= double?(@activity)%>>

      <label for="auto_schedule">Should this acitivty be auto scheduled?</label>
      <input id="auto_schedule" type="checkbox" name="auto_schedule" value="t" <%=auto_schedule?(@activity)%>>
    </div>

    <label for="save">Save Changes</label>
    <button id="save" type="submit"><i class='far'>&#xf0c7;</i></button>
  </form>
</div>
